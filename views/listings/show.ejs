<% layout("/layouts/boilerplate") -%>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>
</script>

<div class="container my-5">

  <!-- Owner Info -->
  <div class="text-center mb-4">
    <h6 class="text-muted"><i>Owned by <%= listing.owner.username %></i></h6>
  </div>

  <!-- Listing Card -->
  <div class="card listing-show-card mx-auto shadow-lg border-0">
    <img src="<%= listing.image.url %>" class="listing-show-img" alt="listing_image">
    <div class="card-body px-4 py-4 text-start">
      <h2 class="card-title fw-bold mb-3"><%= listing.title %></h2>
      <p class="mb-2"><%= listing.description %></p>
      <p class="mb-1"><strong>Price:</strong> <%= listing.price.toLocaleString('de-CH', { style: 'currency', currency: 'CHF', minimumFractionDigits: 0, maximumFractionDigits: 0 }) %> / night</p>
      <p class="mb-1"><strong>Location:</strong> <%= listing.location %>, <%= listing.country %></p>
    </div>

    <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
      <div class="d-flex justify-content-between px-4 pb-4">
        <a class="btn btn-dark" href="/listings/<%= listing._id %>/edit">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    <% } %>
  </div>

  <!-- Reviews Section -->
  <div class="mt-5">
    <% if(currUser) { %>
      <h4 class="mb-3">Add a Review</h4>
      <form action="/listings/<%= listing.id %>/reviews" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating.">
            <input type="radio" id="first-rate1" name="review[rating]" value="1"><label for="first-rate1">1</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2"><label for="first-rate2">2</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3"><label for="first-rate3">3</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4"><label for="first-rate4">4</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5"><label for="first-rate5">5</label>
          </fieldset>
        </div>
        <div class="mb-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea class="form-control" name="review[comment]" id="comment" rows="3" required></textarea>
          <div class="invalid-feedback">Please add some comments for review</div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
    <% } %>

    <% if(listing.reviews.length > 0) { %>
      <h4 class="mt-5 mb-3">Reviews</h4>
      <div class="row g-4">
        <% for(let review of listing.reviews) { %>
          <div class="col-md-6">
            <div class="card review-item p-3 shadow-sm">
              <h5 class="fw-bold"><%= review.author.username %></h5>
              <p><%= review.comment %></p>
              <p class="starability-result" data-rating="<%= review.rating %>"></p>
              <% if(currUser && review.author._id.equals(currUser._id)) { %>
                <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                  <button class="btn btn-sm btn-danger">Delete</button>
                </form>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>

  <!-- Map Section -->
  <div class="mt-5">
    <h4 class="mb-3">Where you will be</h4>
    <div id="map" class="rounded shadow-sm" style="height:400px;"></div>
  </div>
</div>

<script src="/js/map.js"></script>
